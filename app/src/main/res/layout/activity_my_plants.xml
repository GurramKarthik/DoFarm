<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".My_Plants">




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Plantings"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/My_plants"

        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/crop_img"

        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/My_plants"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/myPlantsRecyclerView"
        android:background="@drawable/recycler_back"
        />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sell Crops"
        android:textSize="15sp"
        android:backgroundTint="@color/cornflower_blue"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/myPlantsRecyclerView"
        app:layout_constraintEnd_toEndOf="@+id/myPlantsRecyclerView"
        android:id="@+id/sellCropsbtn"

        />

</androidx.constraintlayout.widget.ConstraintLayout>