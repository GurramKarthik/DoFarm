<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    >

    <ImageView
        android:layout_width="300dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/dofarm"
        android:id="@+id/cropImage"
        />

    <TextView
        android:id="@+id/cropName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name Of the Crop"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/cropImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Rupees per Kg:  "
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cropName" />

    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="435"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/cropName" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Harvesting Type:  "
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/amount"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/Harvest"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Manual harvesting"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/Harvest"
        app:layout_constraintTop_toBottomOf="@+id/amount" />


    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Time Required(Avg): "
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Harvest" />

    <TextView
        android:id="@+id/timeReq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text=" 3 - 4 months"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/Harvest" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spaceing Required(Avg):  "
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/timeReq"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6 - 7 inches "
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/timeReq"
        app:layout_constraintStart_toEndOf="@+id/germin"
        android:id="@+id/spaceReq"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Germination Time(Avg):      \n\n[Per Acer - Avg]"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/spaceReq"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/germin"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 - 3 weeks "
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/spaceReq"
        app:layout_constraintStart_toEndOf="@+id/germin"
        android:id="@+id/germinationTime"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Water Required(ltr):  "
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/germin"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/water"
        />

    <TextView
        android:id="@+id/waterReq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="10000 - 20000"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/water"
        app:layout_constraintTop_toBottomOf="@+id/germin" />


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Total Expenses:  "
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/water" />

    <TextView
        android:id="@+id/totalExpenses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="100000"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@id/water" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Number of Plants:  "
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/totalExpenses" />

    <TextView
        android:id="@+id/Totalplants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="9000 "
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/totalExpenses" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Number of "
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/Totalplants"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/numof"
        />
    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"

        app:layout_constraintTop_toBottomOf="@+id/Totalplants"
        app:layout_constraintStart_toEndOf="@+id/numof"
        app:layout_constraintBaseline_toBaselineOf="@+id/numof"
        android:layout_marginTop="20dp"
        android:id="@+id/acreSpinner"
        />

    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Land"
        android:textSize="15sp"
        android:gravity="center"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/acreSpinner"
        app:layout_constraintTop_toBottomOf="@+id/Totalplants"
        app:layout_constraintBaseline_toBaselineOf="@+id/acreSpinner"
        android:id="@+id/landEdtTxt"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/numof"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        android:text="Select the Start Date"
        android:textSize="15sp"
        android:id="@+id/st"
        />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/landEdtTxt"
        app:layout_constraintBaseline_toBaselineOf="@+id/st"
        app:layout_constraintStart_toEndOf="@+id/st"
        android:layout_marginLeft="10dp"
        android:id="@+id/StartDate"
        android:inputType="date"
        />

    <ImageButton
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/calender12"
        app:layout_constraintTop_toBottomOf="@+id/landEdtTxt"
        app:layout_constraintStart_toEndOf="@+id/StartDate"
        android:id="@+id/calender"
        />






    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="proceed To Plant"
        android:textSize="19sp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@+id/acreSpinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/indian_red"
        android:id="@+id/plantbtn"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
